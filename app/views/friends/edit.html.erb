<h1>Editing Friend #<%= @friend.id %></h1>


<%= form_tag(friend_url(@friend), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @friend.name %>
  </div>

  <div>
    <%= label_tag :uid %><br />
    <%= number_field_tag :uid, @friend.uid %>
  </div>

  
  <div>
    <%= submit_tag "Update Friend" %>
  </div>

<% end %>
