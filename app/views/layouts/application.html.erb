<!DOCTYPE html>
<html>
<head>
  <title>Friendphotos</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href="/">FriendPhotos</a>
      <% if current_user %>
        <a href="<%= sign_out_url %>"><button class="btn btn-primary">Sign Out</button></a>
      <% else %>
        <a href="/auth/facebook"><button class="btn btn-primary">Sign in Via Facebook</button></a>
      <% end %>
    </div>
  </div>

<div class="container">
   <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
   <% end %>



<%= yield %>

</div>
</body>
</html>
